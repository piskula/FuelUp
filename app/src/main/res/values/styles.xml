<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statisticsItemDetail">@style/statisticsItemDetail</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statisticsItemDetail">@style/statisticsItemDetail</item>
    </style>

    <style name="AppTheme.Backup">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ConfirmButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SkipButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatisticsItemDetailLayout" parent="Widget.AppCompat.ListView">
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="statisticsItemDetail" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="StatisticsDetailCardStyle" parent="CardView">
        <item name="android:layout_margin">@dimen/cardview_margin</item>
        <item name="elevation">@dimen/cardview_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="StatisticsDetailCardHeader">
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
