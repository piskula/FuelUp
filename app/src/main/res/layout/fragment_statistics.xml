<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="sk.piskula.fuelup.util.BigDecimalFormatter" />

        <variable
            name="vehicle"
            type="sk.piskula.fuelup.entity.Vehicle" />

        <variable
            name="currency"
            type="java.lang.String" />

        <variable
            name="data"
            type="sk.piskula.fuelup.entity.dto.StatisticsDTO" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            style="@style/StatisticsItemDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/fuel_consumption"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_avg_consumption"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.avgConsumption) : @string/na}" />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/distance_driven_total"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_distance_driven_total"
                app:unit="@{vehicle.getUnit().toString()}"
                app:value="@{data!= null ? String.valueOf(data.totalDrivenDistance) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/fill_ups_number_total"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_fill_ups_number_total"
                app:value="@{data!= null ? String.valueOf(data.totalNumberFillUps) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/expenses_number_total"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_expenses_number_total"
                app:value="@{data!= null ? String.valueOf(data.totalNumberExpenses) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/volume_total_fuel"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_volume_total_fuel"
                app:unit="@string/litre"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.totalFuelVolume) : @string/na}" />
            />


            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_total"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_price_total"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.totalPrice) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_total_fuel"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_price_total_fuel"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.totalPriceFillUps) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_total_expense"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_price_total_expense"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.totalPriceExpenses) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_per_distance_total"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@{@string/statistics_price_per_distance(vehicle.getUnit().toString())}"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.totalPricePerDistance) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_per_distance_fill_up"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@{@string/statistics_price_per_distance_fill_up(vehicle.getUnit().toString())}"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.fillUpPricePerDistance) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/price_per_distance_expense"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@{@string/statistics_price_per_distance_expense(vehicle.getUnit().toString())}"
                app:unit="@{currency}"
                app:value="@{data!= null ? BigDecimalFormatter.getCommonFormat().format(data.expensePricePerDistance) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/avg_fuel_price_per_litre"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_avg_fuel_price_per_litre"
                app:unit="@{currency}"
                app:value="@{data!= null ? String.valueOf(data.avgFuelPricePerLitre) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/avg_fuel_price_per_fill_up"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_avg_fuel_price_per_fill_up"
                app:unit="@{currency}"
                app:value="@{data!= null ? String.valueOf(data.avgFuelPricePerFillUp) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/avg_fuel_volume_per_fill_up"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_avg_fuel_volume_per_fill_up"
                app:unit="@string/litre"
                app:value="@{data!= null ? String.valueOf(data.avgFuelVolumePerFillUp) : @string/na}" />
            />

            <sk.piskula.fuelup.view.StatisticsDetailItem
                android:id="@+id/tracking_period"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                app:name="@string/statistics_tracking_period"
                app:unit="@string/day"
                app:value="@{data!= null ? String.valueOf(data.trackingDays) : @string/na}" />
            />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>