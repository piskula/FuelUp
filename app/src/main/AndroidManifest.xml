<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.piskula.fuelup">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.VehicleTabbedDetailActivity"
            android:label="Detail"
            android:launchMode="singleTop"
            android:parentActivityName=".screens.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.piskula.fuelup.screens.MainActivity" />
        </activity>
        <activity
            android:name=".screens.VehicleStatisticsActivity"
            android:label="Detailed Statistics"
            android:launchMode="singleTop"
            android:parentActivityName=".screens.VehicleTabbedDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sk.piskula.fuelup.screens.VehicleTabbedDetailActivity" />
        </activity>
        <activity
            android:name=".screens.edit.EditExpenseActivity"
            android:label="Expense"
            android:parentActivityName=".screens.VehicleTabbedDetailActivity" />
        <activity
            android:name=".screens.edit.AddVehicleActivity"
            android:label="Add Vehicle"
            android:parentActivityName=".screens.MainActivity" />
        <activity
            android:name=".screens.edit.EditVehicleActivity"
            android:label="Edit Vehicle"
            android:parentActivityName=".screens.VehicleTabbedDetailActivity" />
        <activity
            android:name=".screens.edit.AddFillUpActivity"
            android:label="Add Fill Up"
            android:parentActivityName=".screens.VehicleTabbedDetailActivity" />
        <activity
            android:name=".screens.edit.EditFillUpActivity"
            android:label="Edit Fill Up"
            android:parentActivityName=".screens.VehicleTabbedDetailActivity" />

        <provider
            android:name=".data.provider.VehicleProvider"
            android:authorities="sk.piskula.fuelup"
            android:exported="false" />

        <provider
            android:name=".util.GenericFileProvider"
            android:authorities="sk.piskula.fuelup.file.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

    </application>

</manifest>